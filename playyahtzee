#!/bin/bash

rolls=0;
maxrolls=0;
d1=0;
d2=0;
d3=0;
d4=0;
d5=0;
d6=0;

while true; do
    d1=$((RANDOM%6+1));
    d2=$((RANDOM%6+1));
    d3=$((RANDOM%6+1));
    d4=$((RANDOM%6+1));
    d5=$((RANDOM%6+1));
    d6=$((RANDOM%6+1));

    if [ ${d1} == ${d2} ] && [ ${d2} == ${d3} ] && [ ${d3} == ${d4} ] && [ ${d4} == ${d5} ] && [ ${d5} == ${d6} ]; then
        echo -n "After ${rolls} rolls, I got a YAHTZEE"'!';
        echo -e "\t\tHere is what I rolled: ${d1} ${d2} ${d3} ${d4} ${d5} ${d6}";

        if [ ${rolls} -gt ${maxrolls} ]; then
            maxrolls=${rolls};
            echo "New high score"'!'" The max is now ${maxrolls}";
        fi;

        rolls=0;
    else
        rolls=$((rolls+1));
    fi;
done
